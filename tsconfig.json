{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "outDir": "dist",
    "sourceMap": true,
    "rootDir": "src",
    "esModuleInterop": true,
    "strict": true,
    "noImplicitAny": true,
    "types": ["node", "webdriverio/async", "mocha"],
    "resolveJsonModule": true,
    "checkJs": true,
    "importHelpers": true
  },
  "exclude": ["node_modules", ".vscode-test", "dist", "assets"]
}
